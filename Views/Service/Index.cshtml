@model IEnumerable<Project.Models.Service>

@{
    ViewData["Title"] = "Index";
}

<div class="container">

    <div class="row">
        <div class="col-sm-12">
            <p>
                <a asp-action="Create" class="btn btn-primary">Create New Service</a>
            </p>
        </div>
    </div>

    @*Form for the search*@
    <form asp-action="Index" method="get">
        <div class="form-actions no-color">
            <p>
                Find by name: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
                <input type="submit" value="Search" class="btn btn-default" /> |
                <a asp-action="Index">Back to Full List</a>
            </p>
        </div>
    </form>

    <div class="row">
        <div class="col-sm-12">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>
                            @Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.NameSortParm })
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ImagePath)
                        </th>
                        <th> Others</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td style="width:200px;height:200px">
                                <img src="@item.ImagePath" alt="@item.AltText" class="img-fluid" />
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary m-1">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info m-1">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger m-1">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
